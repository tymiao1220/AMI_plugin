/* stylelint-disable */
.visualizer
    height 80vh
    display -webkit-box
    -ms-flex-wrap wrap
    flex-wrap wrap
    background-color #ffffff

.visualizerRender
    height 100%
    width calc(100% - 245px)
    padding 0

.rendererFalse
    background-color #000
    width 0
    height 0
    -webkit-box-sizing border-box
    box-sizing border-box
    border 1px solid rgba(0, 0, 0, 0.2)
    border-bottom none
    position relative
    overflow hidden
    display none

.renderer
    padding 0
    background-color #fff
    width 50%
    height 100%
    -webkit-box-sizing border-box
    box-sizing border-box
    border 1px solid rgba(0, 0, 0, 0.2)
    border-bottom none
    position relative
    overflow hidden

#editor
    pointer-events none
    width 100%
    height 100%
    -webkit-box-sizing border-box
    box-sizing border-box
    border-bottom none
    position absolute
    overflow hidden

.domExploring
    padding 0
    pointer-events none
    height 100%
    -webkit-box-sizing border-box
    box-sizing border-box
    border 1px solid rgba(0, 0, 0, 0.0)
    border-bottom none
    overflow hidden

.domEditing
    padding 0
    pointer-events all
    height 100%
    -webkit-box-sizing border-box
    box-sizing border-box
    border 1px solid rgba(0, 0, 0, 0.0)
    border-bottom none
    overflow hidden

#r0
    border-top 2px solid #03a9f4

#tableStat
    position absolute
    height 54%
    width 50%
    overflow auto
    background-color white

#r1
    border-top 2px solid #f44336


#r2
    border-top 2px solid #ffeb3b


#r3
    border-top 2px solid #8bc34a

#my-gui-container
    right 0
    z-index 10
    height 100%
    width 245px
    padding 0

#stats
  position absolute
  top 0
  height 34px
.dg
    color black
    font 15px "Open Sans", sans-serif!important;
    text-shadow 0 0 0 #111
    .main
        width 200px
        overflow-y auto
        height 80vh
    li
        .title:hover
            background #e3e3e3
    li:not(.folder)
        background #e3e3e3
        border-bottom 1px solid #c9c9c9
    .c .slider
        background #f6f6f6
        cursor ew-resize
        border-radius 5px
        transition all 0.1s
    .cr.number input[type=text]
        color #000000
    .c input[type=text]
        background #f6f6f6
        height 100%
    .c .slider-fg
        background #c9c9c9
        border-radius 5px
        transition all 0.3s
.dg li.title, .dg .closed li.title
    background #f6f6f6
    border-bottom 1px solid rgba(204, 204, 204, 0.6)
    cursor pointer
    background-image none
    transition all 0.3s

